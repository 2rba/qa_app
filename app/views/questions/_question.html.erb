<div id="<%= dom_id question %>">
  <p class="my-5">
    <%= question.body %> <span class="text-sm text-slate-400"><%= question.user.name %> <%= question.created_at.to_fs(:short) %></span>


  <% if action_name != "show" %>
    <%= link_to "Show this question", question, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%#= link_to 'Edit this question', edit_question_path(question), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
  </p>
</div>
